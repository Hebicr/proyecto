@model proyecto.Models.CoberturaPolizas

@{
    ViewBag.Title = "Create";
}

<body background="\img\Prueba.png" style="width:100%; height:100%; background-size: cover;">
    <div class="container justify-content-center" style="height: 350px; width: 380px; background-color: white; border-radius: 10px 10px ">
        <div style="padding-top:20px">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-center">
                    <h4>Creación de Coberturas</h4>
                    <hr>
                </div>
                <label for="txtNombre" class="form-label">Nombre:</label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                <label for="txtPApellido" class="form-label">Descripción:</label>
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

                <label for="txtCedula" class="form-label">Porcentaje:</label>
                @Html.EditorFor(model => model.Porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Porcentaje, "", new { @class = "text-danger" })

                <br>
                <a class="btn btn-primary" style="float:left" href="@Url.Action("Index", "CoberturasPolizas")">Regresar</a>
                <button class="btn btn-success" style="float:right" type="submit">Guardar</button>

            }
        </div>
        </body>

