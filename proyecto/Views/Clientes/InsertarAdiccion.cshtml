        <div style=" height: auto; width: 700px; margin: 0px auto; ">
            <form id="frm">
                <div class="form-group col-xs-12 col-sm-12 col-md-12">
                    @Html.Label("Adicciones", "Adicciones", htmlAttributes: new { @class = "control-label col-xs-2 col-md-2" })
                    <div class="col-xs-5 col-md-5">
                        @Html.DropDownListFor(model => model.idAdiccion, ViewBag.adiccionList as SelectList, "-- Seleccione la Adiccion --", new { @class = "form-control", @required = "required", @id = "aux1" })
