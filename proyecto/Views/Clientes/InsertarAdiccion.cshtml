        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        }
    </div>
}

<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table caption-top table-sm">
                <thead>
                    <tr>
                        <th scope="col">Codigo</th>
                        <th scope="col">Nombre</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.AdiccionesU)
                    {
                        <tr>
                            <td>@item.Codigo)</td>
