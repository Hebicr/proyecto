@model proyecto.Models.Clientes

@{
    ViewBag.Title = "EditarCliente";
}
<body background="\img\Prueba.png" style="width:100%; height:100%; background-size: cover;">
    <div class="container justify-content-center" style="width:500px;background-color: white; border-radius: 10px 10px ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Clientes</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.idCliente, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-group">
                    <label class="col-md-4"> Cedula:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control", @maxlength = "15", @required = "required", @readonly ="readonly" } })
                        @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4"> Nombre:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @maxlength = "49", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4"> Primer Apellido:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.PrimerApellido, new { htmlAttributes = new { @class = "form-control", @maxlength = "49", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.PrimerApellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4"> Segundo Apellido:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SegundoApellido, new { htmlAttributes = new { @class = "form-control", @maxlength = "49", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.SegundoApellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4"> Dirección:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DireccionFisica, new { htmlAttributes = new { @class = "form-control", @maxlength = "99", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.DireccionFisica, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4"> Telefono 1:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TelefonoPrincipal, new { htmlAttributes = new { @class = "form-control", @maxlength = "8", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.TelefonoPrincipal, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4"> Telefono 2:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TelefonoSecundario, new { htmlAttributes = new { @class = "form-control", @maxlength = "8" } })
                        @Html.ValidationMessageFor(model => model.TelefonoSecundario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4"> Email:</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "form-control", @type = "email", @maxlength = "99", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Clientes")" style="float:left">Regresar</a>
                        <input type="submit" value="Save" class="btn btn-success" style="float:right" />
                    </div>
                </div>
            </div>
        }
        </div>
</body>