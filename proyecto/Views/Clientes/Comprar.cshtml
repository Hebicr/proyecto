@model proyecto.Models.RegistrosPolizas

@{
    ViewBag.Title = "Comprar";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal col-md-offset-2 col-md-8">
    <h4>Registros Polizas</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("idCliente", "idCliente", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.Editor("idCliente", "idCliente", new { htmlAttributes = new { @class = "form-control", @required = "required", @Value = @TempData["idCliente"], @readonly = "readonly" } })
            @*@Html.ValidationMessageFor(model => model.idCoberturaPoliza, "", new { @class = "text-danger" })*@
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.idCoberturaPoliza, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.idCoberturaPoliza, ViewBag.coberturas as SelectList, "-- Seleccione una Cobertura --", new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.idCoberturaPoliza, "", new { @class = "text-danger" })
            @Html.Editor("Porcentaje", new { htmlAttributes = new { @class = "form-control col-md-4", @required = "required", @readonly = "readonly" } })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.montoAsegurado, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.montoAsegurado, new { htmlAttributes = new { @class = "form-control", @type="number",@min ="3000000",@max= "100000000" } })
            @Html.ValidationMessageFor(model => model.montoAsegurado, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.numeroAdiciones, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.numeroAdiciones, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.numeroAdiciones, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.montoAdiciones, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.montoAdiciones, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.montoAdiciones, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.primaAntesImpuestos, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.primaAntesImpuestos, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.primaAntesImpuestos, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.impuestos, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.impuestos, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.impuestos, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.primaFinal, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.primaFinal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.primaFinal, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Comprar" class="btn btn-success" />
            <a class="btn btn-danger btn-sm" href='@Url.Action("ClientesxAdicciones", "Clientes") '>Cancelar</a>
        </div>
    </div>
</div>
}

@*<div>
        @Html.ActionLink("Regresar", "Index")
    </div>*@

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#idCoberturaPoliza").change(function () {
                $.get("/Clientes/RetornaPorcentaje?",
                    { idCoberturaPoliza: $("#idCoberturaPoliza").val() },
                    function (data) {
                        $("#Porcentaje").empty();
                        $.each(data, function (index, row) {
                            $("#Porcentaje").val(row.Porcentaje);
                        });
                    }
                )
            });
        });
    </script>
}
