
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body background="\img\Prueba.png" style="width:100%; height:100%; background-size: cover;">
    <div class="container justify-content-center" style="height: 327px; width: 350px; text-align: center; background-color:white; border-radius:10px 10px ">
        <div style=" height: 50px; width: 200px; margin: 0px auto; ">
            <br />
            <br />
            <form action="@Url.Action("Login","Login")" method="post">
                <div class="input-group mb-4">
                    <div class="input-group-append">
                        <span class="input-group-text"></span>
                        <input type="text" name="Usuario" class="form-control input_user" value="" placeholder="Usuario" required>
                    </div>
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-append">
                        <span class="input-group-text"></span>
                        <input type="password" name="Password" class="form-control input_pass" value="" placeholder="Contraseña" required>
                    </div>

                </div>

                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }

                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Error"]
                    </div>
                }
                <br />
                <div class="d-flex justify-content-center mt-3 login_container">
                    <button type="submit" name="button" class="btn btn-success">Iniciar Sesion</button>
                </div>
            </form>

            <br />
            <a class="dropdown-item" href="@Url.Action("Registro", "Login")" style="float: left; ">Registrese</a>
            <br />
        </div>
    </div>
    </body>