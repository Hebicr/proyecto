@model proyecto.Models.Adiciones

@{
    ViewBag.Title = "Create";
}

<body background="\img\Prueba.png" style="width:100%; height:100%; background-size: cover;">
    <div class="container justify-content-center" style="height: 290px; width: 380px; align-items:center; background-color: white; border-radius: 10px 10px ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div style="padding-top:20px">
                <div class="text-center">
                    <h4>Creación de Adicciones</h4>
                    <hr>
                </div>
                <label for="txtNombre" class="form-label">Nombre:</label>

                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                <label for="txtPApellido" class="form-label">Código:</label>

                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                <br>
                <a class="btn btn-primary" href="@Url.Action("Index", "Adicciones")" style="float:left">Regresar</a>
                <button class="btn btn-success" style="float:right" type="submit">Guardar</button>
            </div>
        }
    </div>
</body>

